<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.android.app.weather.forecast.activity.WeatherCurrentLocationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_table_row"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="@dimen/width_of_text_detail"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_address"
            android:layout_weight="1"
            android:text="@string/address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorDarkGreen"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvAddressCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorDarkGreen"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_table_row"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTemp"
            android:layout_width="@dimen/width_of_text_detail"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_temperature"
            android:layout_weight="1"
            android:text="@string/temperature"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorDarkGreen"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvTempCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/temperature"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorDarkGreen"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_table_row"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSky"
                android:layout_width="@dimen/width_of_text_detail"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_temperature"
                android:layout_weight="1"
                android:text="@string/sky"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorDarkGreen"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imgSky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_weathercurrent" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_straight_line"
        android:layout_marginTop="10dp"
        android:background="@color/colorDarkGreen" />

    <TextView
        android:id="@+id/tvDetail"
        style="@style/mode_inactive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/detail_weather"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorDarkGreen"
        android:textSize="18sp" />


</LinearLayout>
